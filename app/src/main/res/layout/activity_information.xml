<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color">

    <ImageButton
        android:id="@+id/ibtnBackInformation"
        android:layout_width="@dimen/thirty"
        android:layout_height="@dimen/thirty"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty"
        android:layout_marginTop="@dimen/fifty"
        android:orientation="horizontal"
        android:weightSum="8">

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight=".5" />


        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/cell_border"
            android:gravity="center"
            android:text="@string/user_menu"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight=".5" />

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/cell_border"
            android:gravity="center"
            android:text="@string/unit_details"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight=".5" />

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/cell_border"
            android:gravity="center"
            android:text="@string/news_feed"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight=".5" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/hundred_thirty"
        android:gravity="center"
        android:text="@string/copy_right"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/thirty" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/hundred"
        android:layout_height="@dimen/hundred"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/atu" />


</RelativeLayout>